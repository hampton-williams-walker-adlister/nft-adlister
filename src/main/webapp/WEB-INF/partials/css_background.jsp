
body
{
background-image: url("../img/field.jpeg");
background-repeat: no-repeat;
background-size: cover;
background-position: center;
height: 100%;
background-attachment: fixed;
}

h1
{
color:orange;
text-align:center;
}
.grid
{
display: grid;
column-gap: 50px;
grid-template-columns: auto auto auto;
padding: 10px;
border-style: double;
border-color :orange ;
}
.grid-item
{
color: blue;
border: 5px inset rgba(0, 0, 0, 0.8);
padding: 20px;
font-size: 30px;
text-align: center

}

nav
{
position: sticky;
top: 0;
width:100%;
}

footer
{
left: 0;
bottom: 0;
width: 100%;
background-color: #003594;
color: white;
text-align: center;
}
